{block flashes}
    <div n:if="$flashes">
        <div class="alert alert-{$flashes[0]->type} alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <ul>
                {foreach $flashes as $flash}
                    <li>{$flash->message}</li>
                {/foreach}
            </ul>
        </div>
    </div>
{/block}
        <ul class="dropdown-menu">
            {ifset $menuitemsaccess['app_backend_ipprotection_presenters_whiteproxypresenter']}
                <li {if isset($activeippwhiteproxy)}class="{$activeippwhiteproxy}"{/if}>
                    <a n:href=":Backend:IpProtection:WhiteProxy:default"><i class="fa fa-angle-double-right"></i> {_ 'Proxies Accepted'}</a>
                </li>
            {/ifset}
            {ifset $menuitemsaccess['app_backend_ipprotection_presenters_blackippresenter']}
                <li {if isset($activeippblackip)}class="{$activeippblackip}"{/if}>
                    <a n:href=":Backend:IpProtection:BlackIp:default"><i class="fa fa-angle-double-right"></i> {_ 'Ips Restricted'}</a>

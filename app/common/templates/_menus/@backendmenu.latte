<!-- APPSETTINGS MENU -->
{ifset $menuitemsaccess['group_backend_appsettings']}
<li class="dropdown {if isset($activeappsettings)}{$activeappsettings}{/if}">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true"><i class="fa fa-cogs"></i> {_ 'App Settings'}<b class="caret"></b></a>
    <ul class="dropdown-menu">
        {ifset $menuitemsaccess['app_backend_presenters_appkeypresenter']}
            <li {if isset($activeappkey)}class="{$activeappkey}"{/if}>
                <a n:href=":Backend:AppKey:default" onclick="return confirm('{_ 'Warning: Do you want to make changes to the configuration of the application (config.neon file)'}')"><i class="fa fa-angle-double-right"></i> {_ 'App Key'}</a>
            </li>
        {/ifset} 
    </ul>
</li>
{/ifset}
<!-- END APP KEY MENU -->

<!-- IPPROTECTION MENU -->
